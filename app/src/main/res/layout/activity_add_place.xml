<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".AddPlaceActivity">

    <EditText
        android:id="@+id/addUrlEditText"
        android:layout_width="256dp"
        android:layout_height="81dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="URL till bilden"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#B3B3B3"
        android:textColorHint="#B3B3B3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addNameEditText" />

    <EditText
        android:id="@+id/addNameEditText"
        android:layout_width="256dp"
        android:layout_height="79dp"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Namn på platsen"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#B3B3B3"
        android:textColorHint="#B3B3B3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addInfoEditText"
        android:layout_width="256dp"
        android:layout_height="81dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Lite info om platsen"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#B3B3B3"
        android:textColorHint="#B3B3B3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addNameEditText" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="186dp"
        android:layout_height="72dp"
        android:layout_marginTop="196dp"
        android:background="@drawable/custom_button"
        app:backgroundTint="@null"
        android:fontFamily="@font/alfa_slab_one"
        android:text="LÄGG TILL"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addInfoEditText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="295dp"
        android:layout_height="126dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Vilket är ditt smultronställe?"
        android:textAlignment="center"
        android:textColor="#477A3C"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/goBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26"
        app:srcCompat="@drawable/ic_baseline_navigate_before_24" />

    <ImageView
        android:id="@+id/addPinImageView"
        android:layout_width="72dp"
        android:layout_height="63dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/addButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addUrlEditText"
        app:layout_constraintVertical_bias="0.183"
        app:srcCompat="@drawable/namnl_s_design__3_" />

</androidx.constraintlayout.widget.ConstraintLayout>